#include <iostream>
#include <time.h>
#include <cstdlib>
#include <windows.h>

using namespace std;

int i, liczby[6], liczba;

int main()

{
    cout << "Witaj w programie lotto" << endl;


    for(int i=0; i<6; i++)
    {
        srand(time(NULL));
        liczba=rand()%49;
        Sleep(1000);
        cout<<liczba<<"\a"<<endl;
    }
    return 0;
}
